
@model PerfilesSA2.Models.Empleado

<h2>Detalles del Empleado</h2>

<div>
    <h4>@Model.Nombres</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">DPI</dt>
        <dd class="col-sm-10">@Model.DPI</dd>

        <dt class="col-sm-2">Fecha de Nacimiento</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento.ToShortDateString()</dd>

        <dt class="col-sm-2">Género</dt>
        <dd class="col-sm-10">@Model.Genero</dd>

        <dt class="col-sm-2">Fecha de Ingreso</dt>
        <dd class="col-sm-10">@Model.FechaIngreso.ToShortDateString()</dd>

        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>

        <dt class="col-sm-2">NIT</dt>
        <dd class="col-sm-10">@Model.NIT</dd>

        <dt class="col-sm-2">Departamento</dt>
        <dd class="col-sm-10">@Model.DepartamentoID</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.EmpleadoID" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Regresar</a>
